doctype html
html
    head
        meta(name='viewport', content='width=device-width')
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.7.0/css/all.css", integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ", crossorigin="anonymous")
        link(rel="icon", href ="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-image-512.png", type = "image/x-icon")
        title Feeds
        style
            include ./feeds.css
            include ./viewPhoto.css
        script 
            include ./viewPhoto.js
    body
        div.container-fluid.wrapper   
            include ./nav.pug
            section
                include ./viewPhoto.pug
                div.category
                    ul
                        li 
                            a(href="/feeds").active Feeds
                        li 
                            a(href="/photos") My Photos
                        li 
                            a(href="/albums") My Albums
                div.container.boxed-photo
                    div.choice.btn-group
                        button PHOTO
                        button.active ALBUM
                    div.list-card 
                        each photo in photos    
                            div.card-photo(onclick="showPhoto(\""+ `${photo.image}` +"\")") 
                                div.image
                                    img(src= photo.image, alt="").pic1
                                    img(src= photo.image, alt="").pic2
                                    img(src= photo.image, alt="").pic3
                                div.content
                                    div.user     
                                        img(src="https://www.pavilionweb.com/wp-content/uploads/2017/03/man-300x300.png", alt="")
                                        span= photo.user.name
                                    div.title-photo
                                        span= photo.title
                                    div.content-photo 
                                        span= photo.content
                                    div.like
                                        a(href="#") 
                                            i.fas.fa-heart  123
                                        span 4:56 pm 25/05/2022
                    div.page
                        ul  
                            li.page-item
                                a(href="#").page-link.active Previous
                            li.page-item
                                a(href="#").page-link 1
                            li.page-item
                                a(href="#").page-link 2
                            li.page-item
                                a(href="#").page-link 3
                            li.page-item
                                a(href="#").page-link Next                  

            footer
                
            